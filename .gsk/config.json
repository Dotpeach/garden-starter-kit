{
  "all": {
    "optimize" : false,
    "relax"    : false
  },
  "css" : {
    "src-dir"     : "./src/css",
    "dest-dir"    : "./build/css",
    "engine"      : "sass",
    "autoprefixer": ["> 4%", "ie >= 8"]
  },
  "html" : {
    "src-dir" : "./src/html",
    "dest-dir": "./build",
    "data-dir": "./src/data",
    "engine"  : "twig",
    "a11y"    : {
      "viewports": ["320x480","768x1024","1024x768","1920x1080"],
      "delay"    : 1
    }
  },
  "js" : {
    "src-dir" : "./src/js",
    "dest-dir": "./build/js",
    "engine"  : "browserify",
    "filename": "script.js"
  },
  "images": {
    "src-dir" : "./src/assets/img",
    "dest-dir": "./build/img"
  },
  "assets": {
    "src-dir" : "./src/assets",
    "dest-dir": "./build"
  },
  "connect": {
    "port": 8000,
    "open": false
  },
  "doc": {
    "src-dir"   : "./docs",
    "dest-dir"  : "./build/doc"
  }
}
